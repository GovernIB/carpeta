<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>carpeta Back</display-name>

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <!-- Servlet de JSF -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- Per la llista completa de paràmetres de JSF veure 11.1.3 de l'especificació JSF -->
    <!-- State saving method: 'client' o 'server' (=default). Veure 2.5.2  de l'especifiació JSF -->
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <!-- Canvia el mode en que es generen certs errors per ajudar al desenvolupament -->
    <!-- TODO Aquest s'hauria de filtrar amb el maven per generar l'aplicació de producció -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <!-- Per defecte és GMT. Com que solem estar a GMT+1 convé indicar que agafi del sistema -->
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <!-- Interpretar els input text buids com a null -->
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>

    <!--
        Opcions de configuració de Primefaces
        Veure: https://primefaces.github.io/primefaces/7_0/#/gettingstarted/configuration
    -->
    <context-param>
        <param-name>primefaces.TRANSFORM_METADATA</param-name>
        <param-value>true</param-value>
    </context-param>
    <!-- El tema ha de coincidir amb la dependència inclosa dins el WAR. Per no emprar-ne cap posar el valor none -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>

    <!--
        Primefaces s'integra amb les error-page.
        Veure: https://primefaces.github.io/primefaces/7_0/#/core/errorhandling?id=error-pages
    -->
    <error-page>
        <location>/error/defaultError.xhtml</location>
    </error-page>

    <security-constraint>
        <display-name>Accés restringit a adminsitradors</display-name>
        <web-resource-collection>
            <web-resource-name>tot</web-resource-name>
            <description>Tots els recursos</description>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CAR_ADMIN</role-name>
        </auth-constraint>
        <!-- Si requerim SSL -->
        <!--
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
        -->
    </security-constraint>

    <!-- <login-config>
         <auth-method>BASIC</auth-method>
         <realm-name>Govern de les Illes Balears</realm-name>
     </login-config>-->

     <login-config>
         <auth-method>KEYCLOAK</auth-method>
         <realm-name>Autenticacio</realm-name>
     </login-config>

     <security-role>
         <role-name>CAR_ADMIN</role-name>
     </security-role>

 </web-app>
