<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="carpetaPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/carpetaDS</jta-data-source>

		<class>es.caib.carpeta.jpa.AccesJPA</class>
		<class>es.caib.carpeta.jpa.AuditoriaJPA</class>
		<class>es.caib.carpeta.jpa.AvisJPA</class>
		<class>es.caib.carpeta.jpa.EnllazJPA</class>
		<class>es.caib.carpeta.jpa.EntitatJPA</class>
		<class>es.caib.carpeta.jpa.EstadisticaJPA</class>
		<class>es.caib.carpeta.jpa.FitxerJPA</class>
		<class>es.caib.carpeta.jpa.IdiomaJPA</class>
		<class>es.caib.carpeta.jpa.LogCarpetaJPA</class>
		<class>es.caib.carpeta.jpa.PluginJPA</class>
		<class>es.caib.carpeta.jpa.PluginEntitatJPA</class>
		<class>es.caib.carpeta.jpa.PropietatGlobalJPA</class>
		<class>es.caib.carpeta.jpa.TraduccioJPA</class>
		<class>es.caib.carpeta.jpa.TraduccioMapJPA</class>
		<class>es.caib.carpeta.jpa.UsuariJPA</class>
		<class>es.caib.carpeta.jpa.UsuariEntitatJPA</class>

        <!-- Activar cache només per aquelles entitats on volguem expressament -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <!-- Sempre activar la validació de les propietats -->
        <validation-mode>CALLBACK</validation-mode>

        <properties>
            <property name="hibernate.dialect" value="${es.caib.carpeta.hibernate.dialect}" />
            <property name="hibernate.query.substitutions" value="${es.caib.carpeta.hibernate.query.substitutions}"/>
        </properties>
    </persistence-unit>
</persistence>