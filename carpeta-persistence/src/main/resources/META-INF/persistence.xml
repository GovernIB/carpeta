<?xml version="1.0" encoding="UTF-8" ?>

<!-- FITXER AUTOGENERAT -->
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="carpetaPU" transaction-type="JTA">
        <provider>es.caib.carpeta.hibernate.CustomHibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/carpetaDS</jta-data-source>
        
		<class>es.caib.carpeta.persistence.AccesJPA</class>
		<class>es.caib.carpeta.persistence.AuditoriaJPA</class>
		<class>es.caib.carpeta.persistence.AvisJPA</class>
		<class>es.caib.carpeta.persistence.EnllazJPA</class>
		<class>es.caib.carpeta.persistence.EntitatJPA</class>
		<class>es.caib.carpeta.persistence.EstadisticaJPA</class>
		<class>es.caib.carpeta.persistence.FitxerJPA</class>
		<class>es.caib.carpeta.persistence.IdiomaJPA</class>
		<class>es.caib.carpeta.persistence.LogCarpetaJPA</class>
		<class>es.caib.carpeta.persistence.PluginJPA</class>
		<class>es.caib.carpeta.persistence.PluginEntitatJPA</class>
		<class>es.caib.carpeta.persistence.PropietatGlobalJPA</class>
		<class>es.caib.carpeta.persistence.SeccioJPA</class>
		<class>es.caib.carpeta.persistence.TraduccioJPA</class>
		<class>es.caib.carpeta.persistence.TraduccioMapJPA</class>
		<class>es.caib.carpeta.persistence.UsuariJPA</class>
		<class>es.caib.carpeta.persistence.UsuariEntitatJPA</class>

        <!-- Activar cache només per aquelles entitats on volguem expressament -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <!-- Sempre activar la validació de les propietats -->
        <validation-mode>CALLBACK</validation-mode>

    </persistence-unit>
</persistence>